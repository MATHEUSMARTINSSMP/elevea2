# === Google Apps Script Configuration ===
GAS_BASE_URL=https://script.google.com/macros/s/YOUR_GAS_SCRIPT_ID/exec
ELEVEA_GAS_EXEC_URL=https://script.google.com/macros/s/YOUR_GAS_SCRIPT_ID/exec
SHEETS_WEBAPP_URL=https://script.google.com/macros/s/YOUR_GAS_SCRIPT_ID/exec

# === Admin Authentication ===
ADMIN_DASH_TOKEN=your-admin-token-here
ADMIN_TOKEN=your-admin-token-here

# === AI Services ===
OPENAI_API_KEY=sk-your-openai-api-key-here

# === MercadoPago Integration ===
MP_ACCESS_TOKEN=your-mercadopago-access-token
MP_WEBHOOK_SECRET=your-mercadopago-webhook-secret

# === WhatsApp Business API ===
WHATSAPP_ACCESS_TOKEN=your-whatsapp-business-api-token
